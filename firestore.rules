rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // User profiles collection
    match /users/{userId} {
      // Allow users to read any user profile (for collaboration features)
      allow read: if request.auth != null;
      
      // Allow users to create/update only their own profile
      allow create, update: if request.auth != null
        && request.auth.uid == userId
        && request.resource.data.userId == userId
        && request.resource.data.email is string
        && request.resource.data.firstName is string
        && request.resource.data.lastName is string;
    }
    
    // Canvas shapes collection
    match /canvases/{canvasId}/shapes/{shapeId} {
      // Allow authenticated users to read all shapes
      allow read: if request.auth != null;
      
      // Allow authenticated users to create shapes
      allow create: if request.auth != null
        && request.resource.data.createdBy == request.auth.token.email
        && request.resource.data.zIndex is number
        && request.resource.data.zIndex >= 1;
      
      // Allow users to update shapes
      allow update: if request.auth != null
        && request.resource.data.lastModifiedBy == request.auth.token.email
        && request.resource.data.zIndex is number
        && request.resource.data.zIndex >= 1;
      
      // Allow users to delete shapes
      allow delete: if request.auth != null;
    }
  }
}

